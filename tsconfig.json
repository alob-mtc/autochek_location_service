{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@Root/*": ["src/*"],
      "@Model/*": ["src/Models/*"],
      "@Controller/*": ["src/Controllers/*"],
      "@Core/*": ["src/Modules/*"],
      "@Service/*": ["src/Services/*"],
      "@Setting/*": ["src/Config/*"],
      "@Constant/*": ["src/constant/*"]
    }
  }
}
